<header id="siteheader">
  <div class="row">
    <div class="col-sm-3 col-lg-3">  
      <%= link_to '/', id: "logo" do %>
        <%= image_tag('logo.png') %>
      <% end %>
    </div>
    
    <div class="col-sm-2 col-lg-2">  
      800-626-2350        
    </div>
    
    <div class="col-sm-7 col-lg-7">   
      <div class="row">
        <div class="col-sm-3 col-lg-3 border-right hl-link no-left-pad">  
          <ul>
           
            <% if user_signed_in? %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              <li><a class="dropdown-toggle" href="/users/<%= current_user.id %>">MY ACCOUNT </a></li>
                <li>Logged in as <br /><%= current_user.email %></li>
            <% else %>
              <li><%= link_to "CREATE ACCOUNT", new_user_registration_path %></li>
              <li><%= link_to "SIGN IN", new_user_session_path %></li>
            <% end %>
          </ul>         
        </div>
        
        <div class="col-sm-3 col-lg-3 border-right">  
          <ul>
            <li><a href="/request_a_quote">Request a Quote</a></li>
            <li><a href="#" class="top-link">Place an Order</a></li>
            <li><%= link_to "Customer Service", "#", class: "top-link" %></li>
          </ul>    
        </div>
        
        <div class="col-sm-3 col-lg-3 border-right top-link">  
          <ul>
            <li><a href="#" class="top-link">How to Measure</a></li>
            <li><a href="#" class="top-link">FREE Catalog</a></li>
            <li><a href="#" class="top-link">FREE Swatches</a></li>
          </ul>        
        </div>

        <div class="col-sm-3 col-lg-3">  
          <%= link_to 'carts/:id', id: "logo" do %>
            <%= image_tag('header_cart.png') %>         
          <% end %>  
        </div>
        
      </div>    
    </div>

  </div>

</header>  
 

<nav class="navbar navbar-default" role="navigation">



  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
            <li><%= link_to "Vinyl Table Covers",     "/categories/1" %></li>
            <li><%= link_to "Vinyl Upholstery Fabric", "/categories/5" %></li>
            <li><%= link_to "Laminated Fabric", "/categories/1" %></li>
            <li><%= link_to "No-Slip Pads",  "/categories/2" %></li>
            <li><%= link_to "Accessories",      "/categories/6" %></li>
            <li><%= link_to "Photo Gallery",    "#" %></li>
            <li><%= link_to "Markets",          "#" %></li>
            
    </ul>

  </div><!-- /.navbar-collapse -->
</nav>














