<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>Americo Admin Panel</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  	<%= stylesheet_link_tag    'admin' %>
  	<%= javascript_include_tag 'admin/admin' %>
  	<%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  	<!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/admin"><%= image_tag('americo-logo.png', :class => "img-responsive") %></a>

        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-left admin-link top-nav visible-md visible-lg">
            <li>
                <a class="" href="/admin">Administration Area Home</a>
            </li>
        </ul>
        <ul class="nav navbar-right admin-link top-nav">
            <li class="visible-md visible-lg">
              <%= link_to 'Sidekiq', sidekiq_web_path %>
            </li>
            <li class="visible-md visible-lg">
              <a href="/admin/admin_users/<%= current_admin_user.id %>"><i class="fa fa-user"></i> <%= current_admin_user.email %> </a>
            </li>
            <li class="pull-right">
              <%= link_to destroy_admin_user_session_path, :method => :delete do %>
                <i class="fa fa-fw fa-power-off"></i> Log Out</a>
              <% end %>
            </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse" id="#sidenav">
            <ul class="nav navbar-nav side-nav">
                <li>
                    <a href="/admin/"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/admin/orders/"><i class="fa fa-fw fa-shopping-cart"></i> Orders</a>
                </li>
                <li>
                    <a href="/admin/quotes/"><i class="fa fa-fw fa-tags"></i> Quotes</a>
                </li>
                <li>
                    <a href="/admin/purchases/"><i class="fa fa-fw fa-credit-card"></i> Purchases</a>
                </li>
                <li>
                    <a href="/admin/charts"><i class="fa fa-fw fa-area-chart"></i> Sales Charts</a>
                </li>
                <li>
                    <a href="/admin/visits"><i class="fa fa-fw fa-line-chart"></i> Visits &amp; Pageviews</a>
                </li>
                <li>
                    <a href="/admin/visitor_stats"><i class="fa fa-fw fa-pie-chart"></i> Visitor Stats</a>
                </li>
                <li>
                    <a href="/admin/geocharts"><i class="fa fa-fw fa-map-marker"></i> Geo Charts - Visitors</a>
                </li>
                <li>
                    <a href="/admin/users/"><i class="fa fa-fw fa-user"></i> Users</a>
                </li>
                <li>
                    <a href="/admin/user_groups/"><i class="fa fa-fw fa-users"></i><i class="fa fa-fw fa-users"></i> User Groups</a>
                </li>
                <li>
                    <a href="/admin/prospects/"><i class="fa fa-fw fa-bullhorn"></i> Prospects</a>
                </li>
                <li>
                    <a href="/admin/prospect_groups/"><i class="fa fa-fw fa-bullhorn"></i><i class="fa fa-fw fa-bullhorn"></i> Prospect Groups</a>
                </li>
                <li>
                    <a href="/admin/email_messages"><i class="fa fa-fw fa-envelope"></i> Email Messages</a>
                </li>
                <li>
                    <a href="/admin/sent_emails"><i class="fa fa-fw fa-archive"></i> Email History</a>
                </li>
                <li>
                    <a href="/admin/sent_emails/new"><i class="fa fa-fw fa-clock-o"></i> Schedule Emails</a>
                </li>
                <li>
                    <a href="/admin/admin_users/"><i class="fa fa-fw fa-bolt"></i> Administrators</a>
                </li>
                <li>
                    <a href="/admin/inhouse_customers/"><i class="fa fa-fw fa-home"></i> Inhouse Customers</a>
                </li>
                <li>
                    <a href="/admin/inhouse_groups/"><i class="fa fa-fw fa-home"></i><i class="fa fa-fw fa-user"></i> Inhouse Groups</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>

    <div id="page-wrapper">
      <div class="container-fluid">
        <%= render 'layouts/messages' %>

        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>