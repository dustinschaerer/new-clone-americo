<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all",
                                            "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>

  <%= render 'layouts/header' %>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span4">
          <!--sidebar-->
          <div class="sidebar-nav-fixed" id="side">
            <% if @cart %>
              <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                <%= render @cart %>   
              <% end %>
            <% end %> 
          <ul class="nav nav-list">
            <li><a href="/store">Store</a></li>
            <li><a href="/categories">Categories</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/styles">Styles</a></li>
            <li><a href="/series">Series</a></li>
            <li><a href="/colors">Colors</a></li>
            <li><a href="/orders">Orders</a></li>
            
            <% if user_signed_in? %>
            <li class="divider"></li>
            <li><a href="/request_a_quote">Request a Quote</a></li>
            <li><a href="/users/<%= current_user.id %>">Account Dashboard</a></li>
            <% end %>

            
            <li class="divider"></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/help">Help</a></li>
            <li><a href="/about">About</a></li>
          </ul>
          </div>
      </div><!--/span4-->
      <div class="span8">
         <!--2nd column-->
         <div id="rightCol">
          <%= render 'layouts/messages' %>
          
          <% if user_signed_in? %>
          <div class="pull-right">
            <p>Logged in as <strong><%= current_user.email %></strong>.
              <%= link_to 'My Dashboard', user_path(current_user) %>
              <%= link_to 'Edit profile', edit_user_registration_path %></p>
          </div>  
          <% end %>

          <%= yield %>

          <%= params.inspect %> 

          <%= debug params %> 

          </div><!--/rightCol-->
      </div><!--/span8-->
    </div>

    <%= render 'layouts/footer' %>
  
  </div>  

</body>
</html>