<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all",
                                            "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= render 'layouts/shim' %>
</head>
<body>
  <div class="container">

  <%= render 'layouts/header' %>
 
    <div class="row">
      
       <!--
   
      <div class="col-sm-3">
          <div class="sidebar-nav-fixed" id="sidequote">
           <% if @quotecart %>
              <%= hidden_div_if(@quotecart.items.empty?, id: 'quotecart') do %>
                <%= render @quotecart %>   
              <% end %>
            <% end %> 
          </div>
      </div>
-->
      <div class="col-sm-12">
         <!--2nd column-->
         <div id="rightCol">
              
          <%= render 'layouts/messages' %>
          
          <%= yield %>


          </div><!--/rightCol-->
      </div><!--/span12-->
    </div>

    <%= render 'layouts/footer' %>
    
       <div class="row top200">
        <div class="col-sm-12 col-lg-12">
          <!--sidebar-->
          <div class="sidebar-nav-fixed" id="side">
            
          
          <ul class="nav nav-list">
            <li><a href="/store">Store</a></li>
            <li><a href="/categories">Categories</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/styles">Styles</a></li>
            <li><a href="/series">Series</a></li>
            <li><a href="/colors">Colors</a></li>
            <li><a href="/orders">Orders</a></li>
            
            <% if user_signed_in? %>
            <li class="divider"></li>
            <li><a href="/request_a_quote">Request a Quote</a></li>
            <li><a href="/users/<%= current_user.id %>">Account Dashboard</a></li>
            <% end %>

            
            <li class="divider"></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/help">Help</a></li>
            <li><a href="/about">About</a></li>
            
            <li class="divider"></li>
            <li><%= link_to "Home",    root_path%></li>
            <li><%= link_to "About",   about_path %></li>
            <li><%= link_to "Help",    help_path %></li>

             <% if user_signed_in? %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
              
            <% end %>
          </ul>
          </div>
      </div><!--/span12-->
    </div>

    
          <%= params.inspect %> 

          <%= debug params %> 


  </div>  
  <script type="text/javascript">
$(window).load(function() {
    $('#slider').nivoSlider();
});
</script>

</body>
</html>