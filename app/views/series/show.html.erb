	        <div><a href="#", id="linkswapper" class="linkswapper">VIEW LARGER  <span class="glyphicon glyphicon-zoom-in"></span></a></div>
          </div>
            
        <% elsif (@series.style.id == 1) %>
          
          <div class="top40 padtop40">
            <a href="/styles/1"><span class="addblack"><strong>Back to ALL CLASSIC Vinyls</strong></span> <span class="glyphicon glyphicon-play"></span></a> 
          </div>   
