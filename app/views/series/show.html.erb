<% if (@series.style.id == 1) %>
<% thistitle = "CLASSIC VINYL"
   thiscolor = "addgold"  %>

<% elsif (@series.style.id == 2) %>
<% thistitle = "PREMIUM VINYL"
   thiscolor = "addarmy"  %>

<% elsif (@series.style.id == 3) %>
<% thistitle = "DESIGNER VINYL  "
   thiscolor = "addpurple"  %>

<% elsif (@series.style.id == 7) %>
<% thistitle = "DISTINCTIONS COLLECTIONS"
   thiscolor = "addorange"  %>

<% elsif (@series.style.id == 8) %>
<% thistitle = "VALUE VINYL"
   thiscolor = "addgold"  %>

<% end %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <div class="<%= thiscolor %>"><span class="seriesname"><%= @series.name %></span> <span class="twoem">&ndash; <%= @series.colors.count %>  colors available </div>
    <div class="seriessub bold">
    	<%= thistitle %> 
    	<% if (@series.style.id == 2) %>
          <% if (@series.id > 56) %>
            <% if (@series.id < 73) %>
		      | <span class="distinctions addorange">DISTINCTIONS COLLECTION</span>
       	    <% end %> 
       	  <% end %>  
        <% end  %>
    </div>   
  </div>
</div>

<div class="row add-bottom top10">
  <div class="col-sm-6">
    <% if (@series.style.id == 7) %>
        <%= image_tag(@series.image_url, alt: @series.name, :id => "bannerimage", :title => @series.id, :class => "img-responsive" ) %>
        <%= image_tag(@series.swapimage, alt: @series.name, :id => "banner2", :title => @series.id, :class => "hidden img-responsive" ) %>
    <% else %>    
    	<%= image_tag(@series.image_url, alt: @series.name, :title => @series.id, :class => "img-responsive" ) %>
    <% end %>    
    <div class="shown">Shown: <%= @series.callout %></div>
  </div>

  <div class="col-sm-6">
  	<div class="serieslead <%= thiscolor %>"><%= @series.lead %></div>
  	<div class="splashtext styledesc addgrey top10 seriesdesc"><%= @series.description %></div>

  	<% if (@series.style.id == 1) %>
  	<div>
  	  <ul class="sideseries">
  	  	<li>Easy care vinyls – simply wipe and go.</li>
  	  	<li>Custom cuts. Table covers are cut to finished size any shape. (see types below)</li>
  	  	<li>Minimum order is just 5 yards.</li>
  	  	<li>Or order by the roll. Each 54”-wide roll holds 25 yards of fabric.</li>
  	  	<li>Finished edge sewn with 1⁄4” single turn helm</li>
  	  </ul>
      <p><a href="/technical_specs" class="addgray underline">Technical specs.</a></p>
    </div>

    <% elsif (@series.style.id == 2) %>
  	<div class="top10">
  	  <ul class="sideseries">
  	  	<li>Easy care vinyls – simply wipe and go.</li>
  	  	<li>Custom cuts. Table covers are cut to finished size any shape. (see types below)</li>
  	  	<li>Minimum order is just 5 yards.</li>
  	  	<li>Or order by the roll. Each 54”-wide roll holds 25 yards of fabric.</li>
  	  	<li>Finished edge sewn with 1⁄4” single turn helm</li>
  	  	<li><a href="/technical_specs" class="addgray underline">Technical specs.</a></li>
  	  </ul>
    </div>

    <% elsif (@series.style.id == 3) %>
  	<div>
  	  <ul class="sideseries">
  	  	<li>Heavy-duty, no-launder fabric is suitable for upholstery</li>
  	  	<li>Table covers are custom sewn to fit your tables. (See types below.)</li>
  	  	<li>Finished edge with 1⁄4” single turn hem</li>
  	  	<li>Offered by the piece (minimum 5 yards) or by the roll (25 yards x 54”)</li>
  	  	<li><a href="/technical_specs" class="addgray underline">Technical specs.</a></li>
  	  </ul>
    </div>
	<% end %>
  	
	<div class="row">
      <% if (@series.style.id == 3) %>
          
       	  <div class="col-xs-12 top40 padtop40">
            <a href="/styles/3"><span class="addblack"><strong>Back to ALL DESIGNER LAMINATES</strong></span> <span class="glyphicon glyphicon-play"></span></a> 
          </div>   

      <% elsif (@series.style.id == 2) %>
