  </div>
</div>

<div class="row add-bottom top10">
  <div class="col-sm-6">
    <%= image_tag(@series.image_url, alt: @series.name, :title => @series.id, :class => "img-responsive" ) %>
  </div>
  <div class="col-sm-6">
  	<div class="serieslead addgold"><%= @series.lead %></div>
  	<div class="splashtext styledesc addgrey top10 seriesdesc"><%= @series.description %></div>
  	
	<div class="row">
  	
	  <div class="col-sm-6 border-right">
            
            <% if (@series.style.id == 7) %>
           	  <div class="splashtext upcallout"><%= @series.callout %></div>
           	  <div class="pull-right top10">
