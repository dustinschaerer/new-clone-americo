	    <% end %> <!-- end of ID=7 --> 

	  </div>


	</div>
  </div>
</div> 

<div class="row">
  <div class="col-xs-9 col-sm-10">   
    <div class="row">  
  	  <% color_array = @series.colors.order("name") %>
  	  <% color_array.each do |swatch| %>
  	  
        <div class="col-xs-6 col-sm-3 bottom25">
          <%= image_tag(swatch.image_url, :class => "img-responsive imgbottompad" ) %>
          <div class="row">
			<div class="col-xs-9">
				<div class="addblack"><strong><% if (swatch.notforupholstery?) %>  <span class="glyphicon glyphicon-exclamation-sign"></span> <% end %><% swatch.series.name %>  <%= swatch.name %></strong></div>
				<div class="addblack">
					<%= link_to('ORDER SWATCH', line_items_path(series_id: swatch.series.id, color_id: swatch.id), :class => "btn btn-primary btn-xs", method: :post ) %> 
				</div>
			</div>
			<div class="col-xs-3">
                <!-- Button trigger modal -->
				<button class="btn btn-default btn-med pullinleft10" data-toggle="modal" data-target="#myModal<%= swatch.id %>">
				  <span class="glyphicon glyphicon-zoom-in"></span>	
				</button>
	        </div>

			<!-- Modal -->
			<div class="modal fade" id="myModal<%= swatch.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        <h4 class="modal-title" id="myModalLabel"><%= swatch.series.name %> - <%= swatch.name %></h4>
			      </div>
			      <div class="modal-body">
			      
			        <div class="row">
			        	<div class="col-xs-9">
			        		<%= image_tag(swatch.image_url, :class => "img-responsive" )   %>
		        		</div>
		        		<div class="col-xs-3">
		        		    <div class="addblack bottom15">MATERIAL</div>
		        		    <div class="addblack bottom25"><%= swatch.series.style.name %></div>
		        		    <div class="addblack bottom15">COLOR</div>
		        		    <div class="addblack bottom25"><%= swatch.name %></div>
			        		
		        		</div>
		        		
			        </div>

			        <div class="row">
			        	<div class="col-xs-12">
			        		<div class="bottom15"><%= swatch.series.callout %></div>
			        		<div class="bottom15"><%= swatch.series.description %></div>
			        		<div class="">Custom cuts available! Minimum order is just 5 yards. Or order by the roll. Each 54”-wide roll holds 25 yards of fabric.</div>
		        		</div>
		        		
		        			
			        </div>

			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			        

					<%= link_to('Order Swatch', line_items_path(series_id: swatch.series.id, color_id: swatch.id), :class => "btn btn-primary", method: :post ) %>  
			        
			      </div>
			    </div><!-- /.modal-content -->
			  </div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
          </div> 
        </div>
      <% end %>
     
    </div> 
  </div> 
	  
    
  <div class="col-xs-3 col-sm-2">   
    <div>
	  <%= link_to('/how_to_order', :class => "no-under") do %>
	    <%= image_tag("swatch-image.png", :class => "top40", alt:"Free Swatches") %>
	  <% end %>
	</div>
	<div>
	   <%= link_to('/request_catalog', :class => "no-under") do %>
	    <%= image_tag("free-catalog.png", :class => "top40", alt:"Free Catalog") %>
	  <% end %>
	</div>  
	<div class="top40">
	   <%= link_to('/categories/2', :class => "no-under onesix addarmy") do %>
	    <strong>Don't Forget</strong><br>to order the<br>Non-Slip Pads
	  <% end %>
	</div>  
  </div>     


</div> 


