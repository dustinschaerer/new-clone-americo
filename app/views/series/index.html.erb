<h1>Listing series</h1>

<%= link_to 'New Series', new_series_path %>

<table>
  <thead>
    <tr>
      <th>Series ID</th>
      <th>Style ID</th>
      <th>Style</th>
      <th>Name</th>
      <th>Description</th>
      <th>Lead</th>
      <th>Callout</th>
      <th>Image url</th>
      <th>Swapimage (URL)</th>
      <th>Smallmage (URL)</th>
      <th>Vertical</th>
      <th>Horizontal</th>
      <th>Side</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.id %></td>
        <td><%= series.style_id %></td>
        <td><%= series.style.name if series.style_id %></td>
        <td><%= series.name %></td>
        <td><%= series.description %></td>
        <td><%= series.lead %></td>
        <td><%= series.callout %></td>
        <td><%= series.image_url %></td>
        <td><%= series.swapimage %></td>
        <td><%= series.smallimage %></td>
        <td><%= series.vertical %></td>
        <td><%= series.horizontal %></td>
        <td><%= series.side %></td>
        
        <td><%= link_to 'Show', series %></td>
        <td><%= link_to 'Edit', edit_series_path(series) %></td>
        <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Series', new_series_path %>
