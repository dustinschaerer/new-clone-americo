<div class="panel panel-default">
  
  <div class="panel-heading">
    <h3 class="panel-title"><h3>Your Quoteholder Cart in Progress</h3>
  </div>    

  <div class="panel-body">
         
        <% if (@quoteholder.lines.empty?) %>
        <div class="row">
            <div class="col-xs-12">
                You cart is empty!
            </div>
        </div>
        <% end %>
        


    <% @quoteholder.lines.each do |line| %>

        
        <div class="row bottom10">
            <div class="col-xs-12 larger">
               Quote Product: <span class="bold"><%= line.quote_product.name.upcase if line.quote_product_id %></span>
            </div>
        </div>

        <div class="row">
            
            <% if (line.quote_product_id = 13) %>  
              <% if line.size %>
            <div class="col-xs-4 col-xs-offset-1">
                <strong>DIMENSIONS</strong><br>
                <%= line.size.dimension %>
            </div>
              <% end %>  
            <% end %>  
            

            <div class="col-xs-2">
                <% if line.color_id %>
                    <%= image_tag(line.color.image_url, class: "img-responsive") if line.color_id %>
                <% end %>    
            </div>
    
            <div class="col-xs-3">
                <% if line.series_id %>
                  <div class="quotespace border-top">
                    <strong>SERIES:</strong>
                    <%= line.series.name %>
                  </div>  
                <% end %>    


                <% if line.color_id %>
                <div class="quotespace">
                    <strong>COLOR:</strong>
                    <%= line.color.name %>
                  </div>  
                <% end %>


                <% if line.cover_id %>
                  <div class="quotespace border-top">
                    <strong>FINISH COVER:</strong><br>
                    <%= line.cover.name %>
                  </div>  
                <% end %>
            </div>
            

            <!-- If this column is not Value Vinyl-->
              
            <div class="col-xs-3">
              <% if line.shape %>  
                <div class="quotespace">
                  <strong>TABLE SHAPE:</strong>
                  <%= line.shape.name %>
                </div>
              <% end %>   

              <% if line.length %>  
                <div class="quotespace">
                  <strong>LENGTH:</strong>
                  <%= line.length %>"  
                </div>
              <% end %>   

              <% if line.width %>  
                <div class="quotespace">
                  <strong>WIDTH:</strong>
                  <%= line.width %>"
                </div>
              <% end %>  

              # add roll width ?
              
              <% if line.height %>
                <div class="quotespace">
                  <strong>TABLE HEIGHT:</strong>
                  <%= line.height %>"
                </div>
              <% end %>

              <% if line.umbrella %>
                <div class="quotespace">
                  <strong>UMBRELLA?</strong>
                  <%= boolean_to_words(line.umbrella) %>
                </div>
              <% end %>

              <% if line.velcro %>
                <div class="quotespace">
                  <strong>BOOTH WITH VELCRO?</strong>
                  <%= boolean_to_words(line.velcro) %>
                </div>
              <% end %>
            </div>
            
          
           <!-- End If this column is not Value Vinyl-->



            <div class="col-xs-2 text-center">
              <% if line.quantity %>
                <strong>QUANTITY</strong>
                <div><%= line.quantity %></div>
              <% end %>  
            </div>

            <div class="col-xs-2 text-right">
              <% if line.price %>
                <strong>PRICE</strong><br>
                <%= line.price %>
              <% end %>  
            </div>

        </div>     

        <hr>
        <% end %>
 
<table>
	
    <tr>
    	<td>quote_product_id</td>
    	<td>line.cover_id</td> 
    	<td>line.shape_id</td>
    	<td>line.length</td>
    	<td>line.width</td>
    	<td>line.height</td> 
    	<td>line.series_id</td> 
    	<td>line.color_id</td>
        <td>line.umbrella?</td> 
        <td>line.velcro?</td> 
        <td>line.yards</td> 
        <td>line.size</td> 
    	<td>line.quantity</td> 
    	<td>line.price</td>
        <td>Remove</td>
    </tr>
    
    <% @quoteholder.lines.each do |line| %>
    
    <tr>
    	<td><%= line.quote_product.name if line.quote_product_id %></td> 
    	<td><%= line.cover.name if line.cover_id %></td> 
    	<td><%= line.shape.name if line.shape_id %></td> 
    	<td><%= line.length if line.length %></td> 
    	<td><%= line.width if line.width %></td> 
    	<td><%= line.height if line.height %></td> 
    	<td><%= line.series.name if line.series_id %></td> 
    	<td><%= line.color.name if line.color_id %></td> 
    	<td><%= line.umbrella if line.umbrella %></td> 
    	<td><%= line.velcro if line.velcro %></td> 
		<td><%= line.yards if line.yards %></td> 
		<td><%= line.size if line.size %></td> 
	    <td>&times; <%= line.quantity %></td> 
	    <td align="right"><%= number_to_currency(line.price) %></td>
        <td><%= button_to 'X', line, method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
	</tr>
    <% end %>
    <tr class="total_line">
        <td colspan="12"></td>
        <td colspan="2" align="right">Total: <%= number_to_currency(@quoteholder.total_price) %></td>
    </tr>
</table>

<%= link_to 'Remove All Quote Items', @quoteholder, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you Sure?' } %>

<%= link_to "Add Another Item to Quote", quote_products_path, class: "btn btn-primary" %>
<%= link_to "Review Quote Now", @quoteholder, class: "btn btn-warning" %>

<%= link_to "Submit Quote for Pricing Now", new_quote_path, class: "btn btn-success" %>


<%= link_to 'Edit', edit_quoteholder_path(@quoteholder) %> |
<%= link_to 'Back', quoteholders_path %>
