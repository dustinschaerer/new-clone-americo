<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Country</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Status</th>
      <th>User_id</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.firstname %></td>
        <td><%= order.lastname %></td>
        <td><%= order.company %></td>
        <td><%= order.street_address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zipcode %></td>
        <td><%= order.country %></td>
        <td><%= order.telephone %></td>
        <td><%= order.email %></td>
        <td><%= order.status %></td>
        <td><%= order.user_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

