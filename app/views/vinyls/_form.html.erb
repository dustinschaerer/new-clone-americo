<%= form_for(@vinyl, :html => { :class => "form-horizontal" }) do |f| %>
 

  <% if @vinyl.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vinyl.errors.count, "error") %> prohibited this vinyl from being saved:</h2>

      <ul>
      <% @vinyl.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-inputs">  
 
  <div class="row">
    <div class="col-sm-12 col-md-5">
      <div class="field">
          <%= f.label :cover_id %>
          <%= collection_select(:vinyl, :cover_id, Cover.all.order("id"), :id, :name ) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-5">
      <div class="field">
        <%= f.label :shape_id %>
        <%= f.collection_select(:shape_id, Shape.all.order("id"), :id, :name ) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="js-dependent-fields" data-select-id="vinyl_shape_id" data-option-value="2|3">
      <div class="col-sm-12 col-md-5">
        <div class="field">
          <%= f.label :width %>
          <%= f.number_field :width %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="js-dependent-fields" data-select-id="vinyl_shape_id" data-option-value="2">
      <div class="col-sm-12 col-md-5">
        <div class="field">
          <%= f.label :length %>
          <%= f.number_field :length %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="js-dependent-fields" data-select-id="vinyl_shape_id" data-option-value="1">
      <div class="col-sm-12 col-md-5">
        <div class="field">
          <%= f.label :diameter %>
          <%= f.number_field :diameter %>
        </div>
      </div>
    </div>
  </div>  


  <div class="row">
  <div class="js-dependent-fields" data-select-id="vinyl_cover_id" data-option-value="4|5">
    <div class="col-sm-12 col-md-5">
      <div class="field">
        <%= f.label :height %>
        <%= f.number_field :height %>
      </div>
    </div>
  </div>
  </div>  
