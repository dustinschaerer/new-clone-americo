<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-shopping-cart"></i> Orders
            </li>
        </ol>

        <h1 class="page-header">
            Orders
        </h1>
    </div>
</div>
<!-- /.row -->

<%= paginate @orders %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">

        <thead>
            <tr>
              <th>Order ID</th>
              <th>Status</th>
              <th>Customer</th>
              <th>User</th>
              <th>City</th>
              <th>State</th>
              <th>Date</th>
              <th></th>
            </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
                <td><%= link_to "#{order.id}", [:admin, order], class: "order-link" %></td>
                <td><span class="<%= order.current_color %> label-status"><%= order.status %></span></td>
                <td><%= order.firstname %> <%= order.lastname %></td>
                <td><a href="/admin/users/<%= order.user_id %>"><%= order.user.email %></a></td>
                <td><%= order.city %></td>
                <td><%= order.state %></td>
                <td><%= order.created_at.strftime("%-m-%d-%Y") %></td>
                <td></td>
            </tr>
          <% end  %>

        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<%= paginate @orders %>