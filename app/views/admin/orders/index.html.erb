<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-shopping-cart"></i> Orders
            </li>
        </ol>

        <h1 class="page-header">
            Orders
        </h1>
    </div>
</div>
<!-- /.row -->

<%= paginate @orders %>

<div class="row">
  <div class="no-more-tables">
      <table class="col-md-12 table table-hover table-striped table-condensed">
        <thead>
            <tr>
              <th>Order ID</th>
              <th>Status</th>
              <th>Customer</th>
              <th>User</th>
              <th>City</th>
              <th>State</th>
              <th>Date</th>
              <th></th>
            </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
                <td data-title="Order ID"><%= link_to "#{order.id}", [:admin, order], class: "order-link" %></td>
                <td data-title="Status"><span class="<%= order.current_color %> label-status"><%= order.status %></span></td>
                <td data-title="Customer"><%= order.firstname %> <%= order.lastname %></td>
                <td data-title="User"><a href="/admin/users/<%= order.user_id %>"><%= order.user.email %></a></td>
                <td data-title="City"><%= order.city %></td>
                <td data-title="State"><%= order.state %></td>
                <td data-title="Date"><%= order.created_at.strftime("%-m-%d-%Y") %></td>
                <td</td>
            </tr>
          <% end  %>

        </tbody>
      </table>
  </div>
</div>
<!-- /.row -->

<%= paginate @orders %>