
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
    	<ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-credit-card"></i> Purchases
            </li>
        </ol>
        <h1 class="page-header">
            Purchases
        </h1>

    </div>
</div>
<!-- /.row -->

<%= paginate @purchases %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">

        <thead>
            <tr>
              <th>Order ID</th>
              <th>Status</th>
              <th>Customer</th>
              <th>User</th>
              <th>City</th>
              <th>State</th>
              <th>Date</th>
              <th class="text-right">Total</th>
            </tr>
        </thead>

        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
                <td>
                  <%= link_to "#{purchase.id}", [:admin, purchase], class: "purchase-link" %>
                </td>
                <td><span class="<%= purchase.current_color %> label-status"><%= purchase.status %></span></td>
                <td><%= purchase.firstname %> <%= purchase.lastname %></td>
                <td><a href="/admin/users/<%= purchase.user_id %>"><%= purchase.user.email %></a></td>
                <td><%= purchase.ship_city %></td>
                <td><%= purchase.ship_state %></td>
                <td><%= purchase.created_at.strftime("%-m-%d-%Y") %></td>
                <td class="text-right"><%= number_to_currency(purchase.total) %></td>
            </tr>
          <% end  %>

        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<%= paginate @purchases %>