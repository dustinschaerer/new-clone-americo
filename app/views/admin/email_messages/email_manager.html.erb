<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-bullhorn"></i> Prospects
            </li>
        </ol>
        <h1 class="page-header">Email Manager</h1>
    </div>
</div>
<!-- /.row -->
<p><%= link_to 'Create A New Email Message', new_admin_email_message_path, class: 'btn btn-primary' %></p>


<hr>
<div class="row">
   <div class="col-lg-12">
      <h2 class="top10 text-center">Schedule an Email to Send to </h2>
      <div class="row">
        <div class="col-md-6 well">
          <h3 class="top10 text-center">Prospects</h3>
          <%= render '/admin/sent_emails/form', { :sendable_type => "prospect_group" } %>
        </div>

        <div class="col-md-6 well">
          <h3 class="top10 text-center">Users</h3>
          <%= render '/admin/sent_emails/form', { :sendable_type => "user_group" } %>
        </div>
      </div>
      <hr>
      <br><br>
      <h2>History</h2>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Subject</th>
            <th>Headers</th>
            <th>Content</th>
            <th>Mandril tags</th>
            <th>Template Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @admin_email_messages.each do |email_message| %>
            <tr>
              <td><%= link_to "#{email_message.id}", [:admin, email_message], class: "email-link"  %></td>
              <td><%= email_message.subject %></td>
              <td><%= email_message.headers %></td>
              <td><%= truncate(email_message.content, length: 50) %></td>
              <td><%= email_message.mandril_tags %></td>
              <td><%= email_message.template %></td>
              <td><%= link_to 'Show', admin_email_message_path(email_message) %></td>
              <td><%= link_to 'Edit', edit_admin_email_message_path(email_message) %></td>
              <td><%= link_to 'Destroy', admin_email_message_path(email_message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Send To', admin_email_message_path(email_message) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- /.row -->


      <br><br>

    </div>
  </div>
</div>
<!-- /.row -->

