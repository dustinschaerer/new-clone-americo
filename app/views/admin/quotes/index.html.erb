<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-tags"></i> Quotes
            </li>
        </ol>

        <h1 class="page-header">
            Quotes
        </h1>
    </div>
</div>
<!-- /.row -->

<%= paginate @quotes %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">

        <thead>
            <tr>
              <th>Order ID</th>
              <th>Status</th>
              <th>Customer</th>
              <th>User</th>
              <th>City</th>
              <th>State</th>
              <th>Date</th>
              <th class="text-right">Total</th>
            </tr>
        </thead>

        <tbody>
          <% @quotes.each do |quote| %>
            <tr>
                <td><%= link_to "#{quote.id}", [:admin, quote], class: "quote-link" %></td>
                <td><span class="<%= quote.current_color %> label-status"><%= quote.status %></span></td>
                <td><%= quote.firstname %> <%= quote.lastname %></td>
                <td><a href="/admin/users/<%= quote.user_id %>"><%= quote.user.email %></a></td>
                <td><%= quote.ship_city %></td>
                <td><%= quote.ship_state %></td>
                <td><%= quote.created_at.strftime("%-m-%d-%Y") %></td>
                <td class="text-right"><%= number_to_currency(quote.total) %></td>
            </tr>
          <% end  %>

        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<%= paginate @quotes %>







