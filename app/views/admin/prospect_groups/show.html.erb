<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
              <a href="/admin/index"><i class="fa fa-dashboard"></i>  Dashboard</a>
            </li>
            <li>
               <a href="/admin/prospect_groups"> <i class="fa fa-user"></i> Prospect Group</a>
            </li>
            <li class="active">
              <%= @prospect_group.id %>
            </li>
        </ol>

    </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @prospect_group.name %>
    </p>

    <p>
      <strong>Email message:</strong>
      <%= @prospect_group.email_message %>
    </p>

    <p>
      <strong>Last sent on:</strong>
      <%= @prospect_group.last_sent_on %>
    </p>

    <%= link_to 'Edit', edit_admin_prospect_group_path(@prospect_group) %> |
    <%= link_to 'Back', admin_prospect_groups_path %>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Prospect Id</th>
          <th>Prospect Email</th>
          <th>Prospect Name</th>
          <th></th>
        </tr>
      </thead>
      <%= @prospects.each do |prospect| %>
        <tr>
          <td></td>
          <td><%= prospect.id %></td>
          <td><%= prospect.email %></td>
          <td><%= prospect.name %></td>
          <td></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


