
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-tags"></i> Users
            </li>
        </ol>

        <h1 class="page-header">
            Users
        </h1>
    </div>
</div>
<!-- /.row -->

<%= paginate @users %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">

        <thead>
            <tr>
              <th>User ID</th>
              <th>Email</th>
              <th>Created at</th>
              <th>Last Sign in IP</th>
              <th>Last Sign in Date</th>
            </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
                <td><%= link_to "#{user.id}", [:admin, user], class: "user-link" %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%-m-%d-%Y") %></td>
                <td><%= user.last_sign_in_ip %></td>
                <td><%= user.last_sign_in_at %></td>
            </tr>
          <% end  %>

        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<%= paginate @users %>


