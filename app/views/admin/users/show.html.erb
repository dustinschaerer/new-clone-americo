<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <a href="/admin"><i class="fa fa-dashboard"></i>  Dashboard</a>
            </li>
            <li>
                 <a href="/admin/users"><i class="fa fa-user"></i> Users</a>
            </li>
            <li class="active">
               #<%= @user.id %>
            </li>
        </ol>
    </div>
</div>

<p id="notice"><%= notice %></p>

<div class="bs-callout bs-callout-green">

	<div class="row">
	  <div class="col-lg-12">
	    <h4>User ID# <%= @user.id %></h4>
	    <div class="pull-right"><%= link_to 'Edit', edit_admin_user_path(@user) %></div>
	    <hr>
	    <h4>Email: <%= @user.email %></h4><br>
	    <table class="table table-striped table-hover">
	      <tr>
	      	<td>Created At:</td>
	      	<td><%= @user.created_at.strftime("%B %d, %Y") %></td>
	      </tr>
	      <tr>
	      	<td>Updated At:</td>
	      	<td><%= @user.updated_at.strftime("%B %d, %Y") %></td>
	      </tr>
	      <tr>
	      	<td>Sign in Count:</td>
	      	<td><%= @user.sign_in_count %></td>
	      </tr>
	      <tr>
	      	<td>Last Sign in at:</td>
	      	<td><%= @user.last_sign_in_at.strftime("%B %d, %Y") %></td>
	      </tr>
	      <tr>
	      	<td>Current Sign in At:</td>
	      	<td><%= @user.current_sign_in_at.strftime("%B %d, %Y") %></td>
	      </tr>
	      <tr>
	      	<td>Last Sign in IP:</td>
	      	<td><%= @user.last_sign_in_ip %></td>
	      </tr>
	      <tr>
	      	<td>Current Sign in IP:</td>
	      	<td><%= @user.current_sign_in_ip %></td>
	      </tr>
	      <tr>
	      	<td>Encrypted Password:</td>
	      	<td><%= @user.encrypted_password %></td>
	      </tr>
	      <tr>
	      	<td>User Group:</td>
	      	<td>
	          <% if @user.user_group %>
	            <a href=""><%= link_to @user.try(:user_group).try(:name), admin_user_group_path(@user.user_group) %>
	            </a>
	          <% end %>
          </td>
        </tr>
	      <tr>
	      	<td>Subscribed?</td>
	      	<td class="subscribed"><%= @user.status %></td>
	      </tr>
	    </table>
	  </div>
	</div>

	<div class="row">
	  <div class="col-lg-12">
	    <hr>
			<p>User's Orders:
			 	<% @users_orders.each do |order|  %>
			    <a href="/admin/orders/<%= order.id %>" class="order-link"><%= order.id %></a>
				<% end %></p>
			<hr>
			<p>User's Quotes:
			  <% @users_quotes.each do |quote|  %>
			    <a href="/admin/quotes/<%= quote.id %>" class="quote-link"><%= quote.id %></a>
				<% end %></p>
			<hr>
			<p>User's Purchases:
			  <% @users_purchases.each do |purchase|  %>
			    <a href="/admin/purchases/<%= purchase.id %>" class="purchase-link"><%= purchase.id %></a>
				<% end %></p>
	  </div>
	</div>

</div>