
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
              <li class="active">
                <i class="fa fa-area-chart"></i> Sales Charts
            </li>

        </ol>
         <h1 class="page-header">
            Sales Charts &amp; Stats
        </h1>
    </div>
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
           <a href="users">
             <div class="panel-heading">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-users fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge"><%= @new_users.count %></div>
                          <div>New Users this Month</div>
                      </div>
                  </div>
              </div>
              <div class="panel-footer">
                  <span class="pull-left">View Users</span>
                  <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                  <div class="clearfix"></div>
              </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-dark">
          <a href="orders">

              <div class="panel-heading">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-shopping-cart fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge"><%= @orders_this_month.count %></div>
                          <div>Orders This Month</div>
                      </div>
                  </div>
              </div>
              <div class="panel-footer">

                <span class="pull-left">View Orders</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                 <div class="clearfix"></div>
              </div>
  </a>

        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <a href="quotes">
              <div class="panel-heading">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-tags fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge"><%= @quotes_this_month.count %></div>
                          <div>Quotes This Month</div>
                      </div>
                  </div>
              </div>
              <div class="panel-footer">
                <span class="pull-left">View Quotes</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <a href="purchases">
              <div class="panel-heading">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-credit-card fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge"><%= @purchases_this_month.count %></div>
                          <div>Purchases This Month</div>
                      </div>
                  </div>
              </div>

              <div class="panel-footer">
                  <span class="pull-left">View Purchases</span>
                  <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                  <div class="clearfix"></div>
              </div>
            </a>
        </div>
    </div>
</div>
<!-- /.row -->


