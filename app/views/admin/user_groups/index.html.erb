<h1>Listing user_groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email message</th>
      <th>Last sent on</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td><%= user_group.name %></td>
        <td><%= user_group.email_message %></td>
        <td><%= user_group.last_sent_on %></td>
        <td><%= link_to 'Show', [:admin, user_group] %></td>
        <td><%= link_to 'Edit', edit_admin_user_group_path(user_group) %></td>
        <td><%= link_to 'Destroy', [:admin, user_group], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

