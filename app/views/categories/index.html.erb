<h1>Categories</h1>

<% @categories.in_groups_of(4, false).each do |group| %>  

  <div class="entry">
    <div class="row-fluid">

      <% group.each do |category| %>

        <%= link_to(category) do %>
        <div class="span3">
          <div class="well">
            <%= image_tag(category.image_url) %>
            <h4><%= category.name %></h4>
            <%= sanitize(category.description) %>
          </div>
        </div>
        <% end %>
        
      <% end %>

    </div>
  </div>

<% end %>




<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.image_url %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Category', new_category_path %>
