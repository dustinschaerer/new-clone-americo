<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">

	<div class="border-form-div">

	<h1>Forgot your password?</h1>

	<p>If you've forgotten your password, simply type in your email address associated with your account and click the button below.  We 'll immediately send instructions on how to reset your password to your email address.</p>

	<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= f.alert_message "Please fix the following errors:" %>

	  <div class="form-inputs">
	  	<div class="row">
		  <div class="col-xs-12">
	        <%= f.email_field :email, :required => true, :autofocus => true %>
	  	  </div>
        </div>
	  </div>

	  <div class="form-actions">
	    <div class="row">
		  <div class="col-xs-12">
	        <%= f.submit "Send Reset Password Instructions to Email", :class => "btn-lg btn-danger btn-block" %>
	      </div>
	    </div>    
	  </div>


	<%= render "devise/shared/links" %>

	<% end %>
	</div>
  
  </div>
</div>	