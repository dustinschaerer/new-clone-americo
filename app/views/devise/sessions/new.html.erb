<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">

	<div class="border-form-div">


	<h1>Sign in</h1>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs">

 		<div class="row">
		  <div class="col-sm-12 col-md-6">
		    <div class="field">
		    	 <%= f.input :email, :required => false, :autofocus => true, input_html: { maxlength: 40 } %>
		    </div>
          </div>
		</div>

        <div class="row">
		  <div class="col-sm-12 col-md-6">
		    <div class="field">
	    	  <%= f.input :password, :required => false, input_html: { maxlength: 40 } %>
             </div>
          </div>
		</div>

        <div class="row">
		  <div class="col-sm-12 col-md-6">
		    <div class="field">
			  <%= f.input :remember_me,  :as => :boolean, :inline_label => "Remember me", :label => false if devise_mapping.rememberable? %>
			</div>
          </div>
		</div>
	  
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign in", :class => "btn btn-lg btn-success btn-block"  %>
	  </div>
	<%= render "devise/shared/links" %>

	<% end %>

</div>