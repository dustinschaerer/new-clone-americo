<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">

	<div class="border-form-div">


	<h1>Sign in</h1>

	<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	  <%= f.alert_message "Please fix the following errors:" %>

	  <div class="form-inputs">

 		<div class="row">
		  <div class="col-xs-12">
		    <div class="field">
		    	 <%= f.email_field :email, :required => false, placeholder: "Enter email address", :autofocus => true, input_html: { maxlength: 60 } %>
		    </div>
          </div>
		</div>

        <div class="row">
		  <div class="col-xs-12">
		    <div class="field">
	    	  <%= f.password_field :password, :required => false, placeholder: "Enter Password", input_html: { maxlength: 60 } %>
             </div>
          </div>
		</div>

        <div class="row">
		  <div class="col-xs-12">
		    <div class="field">
			  <%= f.check_box :remember_me,  :as => :boolean, :inline_label => true, :label => 'Remember me' if devise_mapping.rememberable? %>
			</div>
          </div>
		</div>
	  
	  </div>

	  <div class="form-actions">
	    <%= f.submit "Sign in", :class => "btn-lg btn-success btn-block"  %>
	  </div>
	<%= render "devise/shared/links" %>

	<% end %>

</div>