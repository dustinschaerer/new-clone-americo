<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">

	<div class="border-form-div">

		<h1>Sign up</h1>

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
	      

	       <div class="row">
		    <div class="col-sm-12 col-md-6">
		      <div class="field">
			    <%= f.input :email, :placeholder => "Email", :required => true, :autofocus => true, input_html: { maxlength: 40 }  %>
		      </div>
            </div>
		  </div>

          <div class="row">
		    <div class="col-sm-12 col-md-6">
		      <div class="field">
			    <%= f.input :password,  :placeholder => "Password", :required => true, input_html: { maxlength: 40 }  %>
		      </div>
            </div>
		  </div>

          <div class="row">
		    <div class="col-sm-12 col-md-6">
		      <div class="field">
			    <%= f.input :password_confirmation,  :placeholder => "Password Confirmation", :required => true, input_html: { maxlength: 40 }  %>
		      </div>
		    </div>
		  </div>


		  </div>

		  <div class="form-actions">
		  	<div class="row">
		      <div class="col-sm-12 col-md-6">
		        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg btn-block" %>
		      </div>
		    </div>
		  </div>

		  <%= render "devise/shared/links" %>

		<% end %>
	</div>
  
  </div>
</div>	