<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">

	<div class="border-form-div">

		<h1>Sign up</h1>

		<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  
   	      <%= f.alert_message "Please fix the following errors:" %>

		  <div class="form-inputs">
	      

	       <div class="row">
		    <div class="col-xs-12">
		      <div class="field">
			    <%= f.email_field :email, :placeholder => "Email", :required => true, :autofocus => true, input_html: { maxlength: 40 }  %>
		      </div>
            </div>
		  </div>

          <div class="row">
		    <div class="col-xs-12">
		      <div class="field">
			    <%= f.password_field :password,  :placeholder => "Password", :required => true, input_html: { maxlength: 40 }  %>
		      </div>
            </div>
		  </div>

          <div class="row">
		    <div class="col-xs-12">
		      <div class="field">
			    <%= f.password_field :password_confirmation,  :placeholder => "Password Confirmation", :required => true, input_html: { maxlength: 40 }  %>
		      </div>
		    </div>
		  </div>


		  </div>

		  <div class="form-actions">
		  	<div class="row">
		      <div class="col-xs-12">
		        <%= f.submit "Sign up", class: "btn-primary btn-lg btn-block" %>
		      </div>
		    </div>
		  </div>

		  <%= render "devise/shared/links" %>

		<% end %>
	</div>
  
  </div>
</div>	