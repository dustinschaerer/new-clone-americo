<h1>Listing colors</h1>

<table>
  <thead>
    <tr>
      <th>Color ID</th>
      <th>Style</th>
      <th>Series</th>
      <th>Name</th>
      <th>Image url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.id %></td>
        <td><%= color.series.style.name %></td>
        <td><%= color.series.name %></td>
        <td><%= color.name %></td>
        <td><%= color.image_url %></td>
        <td><%= link_to 'Show', color %></td>
        <td><%= link_to 'Edit', edit_color_path(color) %></td>
        <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

